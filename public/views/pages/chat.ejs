<%- include('../partials/header.ejs', { title: 'Consultas - Tiendita', showNavbar: true }); -%>

<main>
  <section class="chat py-5">
    <div class="container">
      <div class="text-center mb-5">
        <h1>Consultas</h1>
      </div>
      <div class="d-flex justify-content-center flex-column gap-5">
        <div class="border rounded overflow-hidden p-5 d-flex gap-4" style="height: fit-content;">
          <div class="rounded-circle overflow-hidden" style="width: 60px; height: 60px;">
            <img src="/uploads/<%= userImage %>" style="width: 100%; height: 100%; object-fit: cover;"> 
          </div>
          <form class="w-100" action="/consultas" method="POST">
            <input class="w-100 border-0 bg-light p-3 mb-3" type="text" name="message" placeholder="Realice su consulta." style="border-radius: 1rem;">
            <button class="chat_button bg-danger">Publicar</button>
          </form>
        </div>
        <div class="border rounded p-5 d-flex flex-column gap-4" style="height: fit-content;" id="messageList"></div>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer.ejs', { showFooter: true }); -%>